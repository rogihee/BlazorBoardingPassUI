<div class="boarding-pass-container">
    <div class="boarding-pass-body">
        <div class="passenger">
            <LabelText Label="Passenger" Text="@BoardingPass?.Passenger?.DisplayName"/>
            <Icon src="@BoardingPassAssets.Info" SvgFill="var(--body-line-color)" Size="2rem"/>
        </div>
        <div class="flight-info">
            <div class="flight-info-col1">
                <LabelText Label="Date" Text="@Flight?.Date?.ToShortDateString()"/>
                <LabelText Label="Class" Text="@FlightClassHelper.ToDisplayName(Flight?.FlightClass)"/>
                <LabelText Label="Boarding time" Text="@Flight?.BoardingTime?.ToShortTimeString()"/>
                <LabelText Label="Terminal" Text="@Flight?.Terminal"/>
            </div>
            <div class="flight-info-col2">
                <LabelText Label="Flight" Text="@Flight?.Code"/>
                <LabelText Label="Seat" Text="@Flight?.Seat"/>
                <LabelText />
                <LabelText Label="Gate" Text="@Flight?.Gate"/>
            </div>
        </div>
        <div class="tear-off">
            <div class="left-divider"></div>
            <div class="line-divider"></div>
            <div class="right-divider"></div>
        </div>
        <div class="barcode">
            <Barcode Text="@Passenger?.Id.ToString()"/>
        </div>
    </div>
</div>

@code
{
    [Parameter, EditorRequired]
    public BoardingPass? BoardingPass { get; set; }

    private Flight? Flight => BoardingPass?.Flight;
    private Passenger? Passenger => BoardingPass?.Passenger;
}

